---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className, ...props } = Astro.props;
---

<time datetime={date.toISOString()} class={className} {...props}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
